<body>
    <div class="navbar transparent navbar-inverse navbar-static-top">
      <%= render 'shared/header' %>
    </div>

    <div id="blog">
        <div class="container">
            <div class="section_header">
                <h3>Blog</h3>
                <%= form_tag posts_path, method: :get do %>
                  <%= text_field_tag 'search', nil, :class => 'input-large search-query', :placeholder => 'Search' %>
                <% end %>
            </div>

            <% @posts.find_in_batches(batch_size: 3) do |post| %>
              <!-- Post Row -->
              <div class="row post_row">
                <% post.each do |post| %>
                  <!-- Post -->
                  <div class="span4 post">
                      <div class="img">
                        <%= link_to post_path(post) do %>
                          <%= image_tag post.avatar.url(:medium), :alt => post.title %>
                        <% end %>
                      </div>
                      <div class="text">
                          <h5><%= link_to truncate(post.title, :length => 25).html_safe, post_path(post) %></a></h5>
                          <span class="date"><%= post.created_at.strftime('%a, %d %b') %></span>
                          <p><%= truncate(post.content, :length => 200).html_safe %></p>
                      </div>
                      <div class="author_box">
                          <% references = post.author.split('-') %>
                          <h6><%= references[0] %></h6>
                          <p><%= references[1] %></p>
                      </div>
                      <%= link_to post_path(post), :class => 'plus_wrapper' do %>
                        <span>&#43;</span>
                      <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>

            <div class="pagination">
                <%#= paginate @posts, :theme => 'marketplace_theme', remote: true %>
                <ul>
                    <li><a href="#">Prev</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">Next</a></li>
                </ul>
            </div>
        </div>
    </div>

